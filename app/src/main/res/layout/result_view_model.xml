<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="3dp"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/logo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/resultMatchName"
                    android:textSize="17sp"
                    android:textColor="@color/DarkBlue"
                    android:text="Match Name"
                    android:lines="1"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/resultMatchTime"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:text="Match Name"
                    android:lines="1"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </LinearLayout>


       <LinearLayout
           android:orientation="horizontal"
           android:padding="3dp"
           android:weightSum="3"
           android:layout_gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:text="Winner PRIZE"
               android:textStyle="bold"
               android:lines="1"
               android:textSize="15sp"
               android:gravity="center"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>
           <TextView
               android:text="TIME"
               android:textStyle="bold"
               android:lines="1"
               android:gravity="center"
               android:textSize="15sp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>
           <TextView
               android:text="ENTRY FEE"
               android:textStyle="bold"
               android:gravity="center"
               android:textSize="15sp"
               android:lines="1"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>


       </LinearLayout>

          <LinearLayout
           android:orientation="horizontal"
           android:padding="3dp"
           android:weightSum="3"
           android:layout_gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/resultTotalPrize"
               android:text="TOTAL PRIZE"
               android:textStyle="bold"
               android:gravity="center"
               android:textColor="@color/DarkBlue"
               android:layout_width="0dp"
               android:lines="1"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/resultPerKill"
               android:text="time"
               android:textStyle="bold"
               android:textColor="@color/DarkBlue"
               android:gravity="center"
               android:lines="1"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/resultEntryFee"
               android:text="ENTRY FEE"
               android:textStyle="bold"
               android:lines="1"
               android:gravity="center"
               android:textColor="@color/DarkBlue"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>


       </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="TYPE"
                android:textStyle="bold"
                android:textSize="17sp"
                android:lines="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="ROUTINE"
                android:textStyle="bold"
                android:gravity="center"
                android:lines="1"
                android:visibility="gone"
                android:textSize="17sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="SYLLABUS"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="17sp"
                android:lines="1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/resultType"
                android:text="type"
                android:lines="1"
                android:textStyle="bold"
                android:textColor="@color/DarkBlue"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/resultVersion"
                android:text="routine"
                android:textStyle="bold"
                android:lines="1"
                android:visibility="gone"
                android:textColor="@color/DarkBlue"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/resultMap"
                android:text="syllabus"
                android:lines="1"
                android:textStyle="bold"
                android:textColor="@color/DarkBlue"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:padding="3dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <Button

                android:id="@+id/resultModelUserJointOrNot"
                android:text="NOT JOINED"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:background="@color/DodgerBlue"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>